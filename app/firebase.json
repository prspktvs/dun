{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "./firestore/storage.rules"
  },
  "firestore": {
    "rules": "./firestore/firestore.rules",
    "indexes": "./firestore/firestore.indexes.json"
  }
}
